<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Benutzer bearbeiten</h1>
      <p class="text-muted">Bearbeite die Informationen von <%= @user.display_name %></p>
    </div>
    <div>
      <%= link_to "Anzeigen", admin_user_path(@user), class: "btn btn-outline-primary me-2" %>
      <%= link_to "Zurück", admin_users_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_with model: [:admin, @user], local: true do |form| %>
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :first_name, "Vorname", class: "form-label" %>
                  <%= form.text_field :first_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :last_name, "Nachname", class: "form-label" %>
                  <%= form.text_field :last_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :email, "E-Mail-Adresse", class: "form-label" %>
              <%= form.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :bio, "Biografte", class: "form-label" %>
              <%= form.text_area :bio, class: "form-control", rows: 3 %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :location, "Ort", class: "form-label" %>
                  <%= form.text_field :location, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :website, "Website", class: "form-label" %>
                  <%= form.url_field :website, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= form.submit "Änderungen speichern", class: "btn btn-primary" %>
              <%= link_to "Abbrechen", admin_user_path(@user), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1"><%= t('admin.user_details') %></h1>
      <p class="text-muted"><%= t('admin.information_about', user: @user.display_name) %></p>
    </div>
    <div>
      <%= link_to t('admin.edit'), edit_admin_user_path(@user), class: "btn btn-primary me-2" %>
      <%= link_to t('admin.back'), admin_users_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row">
    <!-- User Information -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <div class="profile-avatar mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
            <%= @user.initials %>
          </div>
          <h4><%= @user.display_name %></h4>
          <p class="text-muted"><%= @user.email %></p>

          <% if @user.banned? %>
            <span class="badge bg-danger fs-6"><%= t('status.banned') %></span>
            <% if @user.banned_at %>
              <br><small class="text-muted"><%= t('status.since', date: @user.banned_at.strftime('%d.%m.%Y um %H:%M')) %></small>
            <% end %>
          <% elsif @user.admin? %>
            <span class="badge bg-success fs-6"><%= t('status.admin') %></span>
          <% else %>
            <span class="badge bg-secondary fs-6"><%= t('status.user') %></span>
          <% end %>

          <% if @user == current_user %>
            <span class="badge bg-primary fs-6 ms-2"><%= t('status.you') %></span>
          <% end %>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-header">
          <h6 class="mb-0"><%= t('account.registered') %></h6>
        </div>
        <div class="card-body">
          <div class="row mb-2">
            <div class="col-sm-5"><strong><%= t('account.registered') %>:</strong></div>
            <div class="col-sm-7"><%= @user.created_at.strftime('%d.%m.%Y um %H:%M') %></div>
          </div>
          <div class="row mb-2">
            <div class="col-sm-5"><strong><%= t('account.updated') %>:</strong></div>
            <div class="col-sm-7"><%= @user.updated_at.strftime('%d.%m.%Y um %H:%M') %></div>
          </div>
          <% if @user.banned? %>
            <div class="row mb-2">
              <div class="col-sm-5"><strong><%= t('account.status') %>:</strong></div>
              <div class="col-sm-7">
                <span class="badge bg-danger"><%= t('status.banned') %></span>
                <% if @user.banned_at %>
                  <br><small><%= t('status.since', date: @user.banned_at.strftime('%d.%m.%Y um %H:%M')) %></small>
                <% end %>
                <% if @user.banned_reason.present? %>
                  <br><small><strong><%= t('account.reason') %>:</strong> <%= @user.banned_reason %></small>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if @user.bio.present? %>
            <div class="row mb-2">
              <div class="col-sm-5"><strong><%= t('account.bio') %>:</strong></div>
              <div class="col-sm-7"><%= simple_format(@user.bio) %></div>
            </div>
          <% end %>
          <% if @user.location.present? %>
            <div class="row mb-2">
              <div class="col-sm-5"><strong><%= t('account.location') %>:</strong></div>
              <div class="col-sm-7"><%= @user.location %></div>
            </div>
          <% end %>
          <% if @user.website.present? %>
            <div class="row mb-2">
              <div class="col-sm-5"><strong><%= t('account.website') %>:</strong></div>
              <div class="col-sm-7">
                <%= link_to @user.website, @user.website, target: "_blank", class: "text-decoration-none" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Activity Information -->
    <div class="col-md-8">
      <!-- Statistics -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card bg-primary text-white">
            <div class="card-body text-center">
              <h3><%= @user.messages.count %></h3>
              <p class="mb-0"><%= t('admin.messages') %></p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card bg-info text-white">
            <div class="card-body text-center">
              <h3><%= @user_rooms.count %></h3>
              <p class="mb-0"><%= t('admin.active_rooms') %></p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card bg-success text-white">
            <div class="card-body text-center">
              <h3><%= time_ago_in_words(@user.created_at) %></h3>
              <p class="mb-0"><%= t('admin.member_since') %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Messages -->
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0"><%= t('admin.latest_messages') %></h6>
        </div>
        <div class="card-body">
          <% if @user_messages.any? %>
            <% @user_messages.each do |message| %>
              <div class="border-bottom pb-3 mb-3">
                <div class="d-flex justify-content-between align-items-start">
                  <div class="flex-grow-1">
                    <div class="d-flex align-items-center mb-2">
                      <strong class="me-2">in <%= link_to message.room.name, room_path(message.room), class: "text-decoration-none" %></strong>
                      <small class="text-muted">
                        <%= message.created_at.strftime('%d.%m.%Y um %H:%M') %>
                      </small>
                    </div>
                    <p class="mb-0"><%= simple_format(message.content) %></p>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="text-center">
              <%= link_to t('admin.show_all_messages_from', user: @user.display_name), "#", class: "btn btn-outline-primary btn-sm" %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-chat-dots display-4 text-muted"></i>
              <p class="text-muted mt-2"><%= t('admin.no_messages_written') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Admin Actions -->
  <% if @user != current_user %>
    <div class="card mt-4 border-danger">
      <div class="card-header bg-danger text-white">
        <h6 class="mb-0"><%= t('admin.admin_actions') %></h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h6><%= t('admin.change_admin_status') %></h6>
            <p class="text-muted small"><%= t('admin.grant_or_revoke_admin') %></p>
            <%= form_with url: toggle_admin_admin_user_path(@user), method: :patch, local: true do |form| %>
              <button type="submit"
                      class="btn <%= @user.admin? ? 'btn-warning' : 'btn-success' %>"
                      onclick="return confirm('<%= t('admin.confirm_admin') %>')">
                <i class="bi bi-shield<%= @user.admin? ? '-x' : '-check' %> me-2"></i>
                <%= @user.admin? ? t('admin.remove_admin') : t('admin.make_admin') %>
              </button>
            <% end %>
          </div>
          <div class="col-md-4">
            <h6><%= t('admin.ban_unban_user') %></h6>
            <p class="text-muted small"><%= t('admin.ban_or_unban_desc') %></p>
            <% if @user.banned? %>
              <%= form_with url: unban_user_admin_user_path(@user), method: :patch, local: true do |form| %>
                <button type="submit"
                        class="btn btn-success"
                        onclick="return confirm('<%= t('admin.confirm_unban') %>')">
                  <i class="bi bi-unlock me-2"></i><%= t('admin.unban_user') %>
                </button>
              <% end %>
            <% else %>
              <%= form_with url: ban_user_admin_user_path(@user), method: :patch, local: true do |form| %>
                <button type="submit"
                        class="btn btn-warning"
                        onclick="return confirm('<%= t('admin.confirm_ban') %>')">
                  <i class="bi bi-ban me-2"></i><%= t('admin.ban_user') %>
                </button>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-4">
            <h6><%= t('admin.delete_user') %></h6>
            <p class="text-muted small"><%= t('admin.irreversible_actions') %></p>
            <%= form_with url: admin_user_path(@user), method: :delete, local: true do |form| %>
              <button type="submit"
                      class="btn btn-danger"
                      onclick="return confirm('<%= t('admin.confirm_delete') %>')">
                <i class="bi bi-trash me-2"></i><%= t('admin.delete_user') %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

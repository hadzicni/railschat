<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1"><%= t('admin.dashboard') %></h1>
      <p class="text-muted"><%= t('admin.welcome_admin') %></p>
    </div>
    <div>
      <%= link_to t('admin.back_to_app'), root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-white bg-primary">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title"><%= t('admin.users') %></h5>
              <h2 class="mb-0"><%= @total_users %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-people fs-1"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-success">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title"><%= t('admin.admin_users') %></h5>
              <h2 class="mb-0"><%= @admin_users %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-shield-check fs-1"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-danger">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title"><%= t('admin.banned_users') %></h5>
              <h2 class="mb-0"><%= @banned_users %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-ban fs-1"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-info">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Nachrichten</h5>
              <h2 class="mb-0"><%= @total_messages %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-chat-dots fs-1"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Logs Statistics -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card text-white bg-secondary">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Aktivitätslogs (heute)</h5>
              <h2 class="mb-0"><%= @todays_activities %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-clock-history fs-1"></i>
            </div>
          </div>
          <div class="mt-2">
            <small>Gesamte Aktivitäten: <%= @total_activities %></small>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card text-white bg-dark">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Aktive Benutzer (heute)</h5>
              <h2 class="mb-0"><%= @active_users_today %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-person-check fs-1"></i>
            </div>
          </div>
          <div class="mt-2">
            <small>Aktivitäten pro Benutzer: <%= (@active_users_today > 0) ? (@todays_activities.to_f / @active_users_today).round(1) : 0 %></small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Role Statistics -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Rollenverteilung</h5>
        </div>
        <div class="card-body">
          <% if @role_distribution.any? %>
            <% @role_distribution.each do |role_name, count| %>
              <% role = Role.find_by(name: role_name) %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                  <span class="badge" style="background-color: <%= role&.color || '#6c757d' %>; color: white;">
                    <%= role_name.humanize %>
                  </span>
                </div>
                <div>
                  <span class="fw-bold"><%= count %> Benutzer</span>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Keine Rollenzuweisungen vorhanden</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Rollensystem</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <h3 class="text-primary"><%= @total_roles %></h3>
              <p class="mb-0">Aktive Rollen</p>
            </div>
            <div class="align-self-center">
              <i class="bi bi-shield-check fs-1 text-primary"></i>
            </div>
          </div>
          <%= link_to "Rollen verwalten", admin_roles_path, class: "btn btn-primary w-100" %>
        </div>
      </div>
    </div>
  </div>  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Schnellaktionen</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <%= link_to admin_users_path, class: "btn btn-outline-primary w-100 mb-2" do %>
                <i class="bi bi-people me-2"></i>Benutzerverwaltung
              <% end %>
            </div>
            <div class="col-md-3">
              <%= link_to admin_roles_path, class: "btn btn-outline-warning w-100 mb-2" do %>
                <i class="bi bi-shield-check me-2"></i>Rollenverwaltung
              <% end %>
            </div>
            <div class="col-md-3">
              <%= link_to admin_activity_logs_path, class: "btn btn-outline-info w-100 mb-2" do %>
                <i class="bi bi-clock-history me-2"></i>Aktivitätslogs
              <% end %>
            </div>
            <div class="col-md-3">
              <%= link_to root_path, class: "btn btn-outline-success w-100 mb-2" do %>
                <i class="bi bi-house me-2"></i>Zur Hauptanwendung
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Recent Activity Logs -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Neueste Aktivitäten</h5>
          <%= link_to admin_activity_logs_path, class: "btn btn-sm btn-outline-primary" do %>
            <i class="bi bi-arrow-right me-1"></i>Alle anzeigen
          <% end %>
        </div>
        <div class="card-body">
          <% recent_activities = ActivityLog.includes(:user, :target).recent.limit(10) %>
          <% if recent_activities.any? %>
            <% recent_activities.each do |activity| %>
              <div class="d-flex align-items-start mb-3">
                <div class="profile-avatar me-2" style="width: 30px; height: 30px; font-size: 0.8rem;">
                  <%= activity.user.initials %>
                </div>
                <div class="flex-grow-1">
                  <div class="d-flex justify-content-between">
                    <strong><%= activity.user.display_name %></strong>
                    <small class="text-muted"><%= format_datetime(activity.created_at) %></small>
                  </div>
                  <p class="mb-0 small text-muted">
                    <%= activity.action_description %>
                  </p>
                  <% if activity.details.present? %>
                    <small class="text-muted"><%= activity.details %></small>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Keine Aktivitäten vorhanden.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Users -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Neueste Benutzer</h5>
        </div>
        <div class="card-body">
          <% if @recent_users.any? %>
            <% @recent_users.each do |user| %>
              <div class="d-flex align-items-center mb-3">
                <div class="profile-avatar me-3" style="width: 40px; height: 40px; font-size: 1rem;">
                  <%= user.initials %>
                </div>
                <div class="flex-grow-1">
                  <h6 class="mb-0"><%= user.display_name %></h6>
                  <small class="text-muted"><%= user.email %></small>
                  <% if user.admin? %>
                    <span class="badge bg-primary ms-2">Admin</span>
                  <% end %>
                </div>
                <small class="text-muted">
                  <%= time_ago_in_words(user.created_at) %> her
                </small>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Keine Benutzer vorhanden.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Messages -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Neueste Nachrichten</h5>
        </div>
        <div class="card-body">
          <% if @recent_messages.any? %>
            <% @recent_messages.each do |message| %>
              <div class="mb-3">
                <div class="d-flex align-items-start">
                  <div class="profile-avatar me-2" style="width: 30px; height: 30px; font-size: 0.8rem;">
                    <%= message.user.initials %>
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between">
                      <strong><%= message.user.display_name %></strong>
                      <small class="text-muted"><%= time_ago_in_words(message.created_at) %> her</small>
                    </div>
                    <small class="text-muted">in <%= message.room.name %></small>
                    <p class="mb-0 small"><%= truncate(message.content, length: 50) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Keine Nachrichten vorhanden.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- if controller_name != 'sessions' %>
  <%= link_to "Anmelden", new_session_path(resource_name),
      class: "btn btn-outline-primary btn-sm me-2" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrieren", new_registration_path(resource_name),
      class: "btn btn-outline-primary btn-sm" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-3">
    <%= link_to "Passwort vergessen?", new_password_path(resource_name),
        class: "text-decoration-none small text-muted" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mt-2">
    <%= link_to "BestÃ¤tigungs-E-Mail nicht erhalten?", new_confirmation_path(resource_name),
        class: "text-decoration-none small text-muted" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mt-2">
    <%= link_to "Entsperrungs-E-Mail nicht erhalten?", new_unlock_path(resource_name),
        class: "text-decoration-none small text-muted" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mt-3">
      <%= button_to "Mit #{OmniAuth::Utils.camelize(provider)} anmelden",
          omniauth_authorize_path(resource_name, provider),
          data: { turbo: false },
          class: "btn btn-outline-secondary w-100" %>
    </div>
  <% end %>
<% end %>

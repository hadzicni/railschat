<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="row w-100 justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h2 class="fw-bold text-dark mb-1">Anmelden</h2>
            <p class="text-muted">Melde dich in deinem Konto an</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "E-Mail-Adresse", class: "form-label" %>
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-control",
                  placeholder: "deine@email.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Passwort", class: "form-label" %>
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "form-control",
                  placeholder: "••••••••" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Angemeldet bleiben", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit "Anmelden", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>

          <!-- Test Accounts Section -->
          <div class="mt-4 p-3 bg-light rounded">
            <h6 class="text-muted mb-3 text-center">
              <i class="bi bi-person-gear me-1"></i>
              Demo-Accounts
            </h6>
            <div class="row g-2">
              <div class="col-12">
                <div class="card border-primary" style="font-size: 0.85rem;">
                  <div class="card-body py-2 px-3">
                    <div class="mb-1">
                      <strong class="text-primary">
                        <i class="bi bi-shield-check me-1"></i>
                        Administrator
                      </strong>
                    </div>
                    <div class="small text-muted">
                      <div><strong>E-Mail:</strong> admin@railschat.com</div>
                      <div><strong>Passwort:</strong> admin123</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <div class="card border-success" style="font-size: 0.85rem;">
                  <div class="card-body py-2 px-3">
                    <div class="mb-1">
                      <strong class="text-success">
                        <i class="bi bi-person me-1"></i>
                        Test Benutzer
                      </strong>
                    </div>
                    <div class="small text-muted">
                      <div><strong>E-Mail:</strong> test@railschat.com</div>
                      <div><strong>Passwort:</strong> test123</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <!-- Profile Header -->
    <div class="col-12 mb-4">
      <div class="card">
        <div class="card-body text-center py-5">
          <h2 class="mb-1">
            <%= @user.full_name %>
          </h2>

          <p class="text-muted mb-3">
            <i class="bi bi-envelope me-2"></i>
            <%= @user.email %>
          </p>

          <% if @user.bio.present? %>
            <p class="lead mb-4"><%= @user.bio %></p>
          <% end %>

          <div class="row text-center mb-4">
            <div class="col-md-4">
              <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-geo-alt text-primary me-2"></i>
                <span><%= @user.location.present? ? @user.location : "Nicht angegeben" %></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-globe text-primary me-2"></i>
                <% if @user.website.present? %>
                  <%= link_to @user.website, @user.website, target: "_blank", class: "text-decoration-none" %>
                <% else %>
                  <span>Keine Website</span>
                <% end %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-calendar3 text-primary me-2"></i>
                <span>Dabei seit <%= format_datetime(@user.created_at, :month_year) %></span>
              </div>
            </div>
          </div>

          <% if current_user == @user %>
            <div class="d-flex gap-2 justify-content-center">
              <%= link_to edit_user_path(@user), class: "btn btn-primary" do %>
                <i class="bi bi-pencil me-2"></i>
                Profil bearbeiten
              <% end %>
              <%= link_to rooms_path, class: "btn btn-success" do %>
                <i class="bi bi-chat-dots me-2"></i>
                Zu den Chaträumen
              <% end %>
            </div>
          <% else %>
            <div class="d-flex gap-2 justify-content-center">
              <%= link_to "javascript:void(0)", class: "btn btn-primary", onclick: "alert('Chat-Funktion kommt bald!')" do %>
                <i class="bi bi-chat me-2"></i>
                Nachricht senden
              <% end %>
              <%= link_to rooms_path, class: "btn btn-outline-primary" do %>
                <i class="bi bi-arrow-left me-2"></i>
                Zurück zu Chaträumen
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Activity Stats -->
    <div class="col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-activity me-2"></i>
            Aktivitätsstatistiken
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-6 text-center">
              <div class="bg-primary bg-opacity-10 rounded p-3 mb-2">
                <i class="bi bi-chat-text-fill text-primary fs-2"></i>
              </div>
              <h4 class="mb-1"><%= @user.messages.count %></h4>
              <small class="text-muted">Nachrichten gesendet</small>
            </div>
            <div class="col-6 text-center">
              <div class="bg-success bg-opacity-10 rounded p-3 mb-2">
                <i class="bi bi-people-fill text-success fs-2"></i>
              </div>
              <h4 class="mb-1"><%= Room.joins(:messages).where(messages: { user: @user }).distinct.count %></h4>
              <small class="text-muted">Chaträume besucht</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-clock-history me-2"></i>
            Letzte Aktivität
          </h5>
        </div>
        <div class="card-body">
          <% recent_messages = @user.messages.includes(:room).order(created_at: :desc).limit(5) %>
          <% if recent_messages.any? %>
            <% recent_messages.each do |message| %>
              <div class="d-flex align-items-center mb-3">
                <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                  <i class="bi bi-chat text-info"></i>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-bold text-truncate">
                    <%= link_to message.room.name, room_path(message.room), class: "text-decoration-none" %>
                  </div>
                  <small class="text-muted">vor <%= time_ago_german(message.created_at) %></small>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="bi bi-chat-square-dots fs-2 mb-3 d-block"></i>
              <p>Noch keine Nachrichten gesendet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Favorite Rooms -->
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-star-fill me-2"></i>
            Häufig besuchte Chaträume
          </h5>
        </div>
        <div class="card-body">
          <% favorite_rooms = Room.joins(:messages)
                                 .where(messages: { user: @user })
                                 .group("rooms.id")
                                 .order("COUNT(messages.id) DESC")
                                 .limit(6) %>

          <% if favorite_rooms.any? %>
            <div class="row">
              <% favorite_rooms.each do |room| %>
                <div class="col-md-4 mb-3">
                  <%= link_to room_path(room), class: "text-decoration-none" do %>
                    <div class="card user-card h-100">
                      <div class="card-body text-center">
                        <div class="bg-primary bg-opacity-10 rounded p-3 mb-3 d-inline-flex">
                          <i class="bi bi-door-open text-primary fs-4"></i>
                        </div>
                        <h6 class="mb-2"><%= room.name %></h6>
                        <small class="text-muted">
                          <%= pluralize(room.messages.where(user: @user).count, 'Nachricht') %>
                        </small>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="bi bi-door-open fs-2 mb-3 d-block"></i>
              <p>Noch keine Chaträume besucht</p>
              <%= link_to "Chaträume entdecken", rooms_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
